gem "rails_admin", :git => "git://github.com/sferik/rails_admin.git"
gem "redis"
gem "slim"
gem "slim-rails"
gem "thin"

group :test, :development do
  gem "fabrication"
  gem "rspec-rails"
  gem "spork-rails"
  gem "faker"
  gem "simplecov", :require => false
  gem "guard-spork"
